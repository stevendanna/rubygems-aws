{
  "id": "rubygems",
  "name": "rubygems",
  "repository": "https://github.com/rubygems/rubygems.org.git",
  "revision": "production",
  "rails_root": "/applications/rubygems/production",
  "rails_env": "production",
  "server_names": ["rubygems.org"],
  "use_ssl": true,
  "force_ssl": true,
  "ssl_key": "dev.rubygems.org.key",
  "ssl_cert": "dev.rubygems.org.crt",
  "internal_port": 2000,
  "application_port": 3000,
  "app_server": {
    "name": "unicorn",
    "concurrency": 4
  },

  "environment_variables": {
    // Rails application settings
    "RAILS_ENV":  "production",
    "RACK_ENV":   "production",

    // OpenSSH server timeout
    "TMOUT": "600"

    // Ruby GC tuning
    // "RUBY_HEAP_MIN_SLOTS": 1000000,
    // "RUBY_HEAP_SLOTS_INCREMENT": 1000000,
    // "RUBY_HEAP_SLOTS_GROWTH_FACTOR": 1,
    // "RUBY_GC_MALLOC_LIMIT": 1000000000,
    // "RUBY_HEAP_FREE_MIN": 500000,
    // "RUBY_FREE_MIN": 500000
  },

  // Hostname
  "set_fqdn": "dev.rubygems.org"

}
